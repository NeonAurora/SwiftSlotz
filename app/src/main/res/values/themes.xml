<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SwiftSlotz" parent="Theme.MaterialComponents.Light.DarkActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tomato</item>
        <item name="colorPrimaryVariant">@color/tomato</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- ActionBar style -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>


    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/tomato</item>
    </style>

    <style name="TomatoText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/tomato</item>
        <item name="android:textColorSecondary">@color/tomato</item>
        <item name="android:textColor">@color/tomato</item>
    </style>
</resources>
