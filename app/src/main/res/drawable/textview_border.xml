<!-- res/drawable/textview_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
           <!-- Transparent background for the shadow -->
            <corners android:radius="4dp"/> <!-- Adjust corner radius if needed -->
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- Background with Border Layer -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <!-- Background color -->
            <corners android:radius="4dp"/> <!-- Adjust corner radius if needed -->
            <stroke
                android:width="2dp"
                android:color="#DCDCDC" /> <!-- White border color -->
        </shape>
    </item>
</layer-list>
