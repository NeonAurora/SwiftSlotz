<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/imgAppLogo"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:contentDescription="App Logo"
            android:src="@drawable/logo_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Developers Section Title -->
        <TextView
            android:id="@+id/txtAppDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Welcome to SwiftSlotz, the ultimate solution for managing your appointments with ease and efficiency. Designed with user convenience in mind, SwiftSlotz offers a seamless experience for booking, tracking, and organizing your appointments across various domains. Whether you're scheduling a business meeting, a medical consultation, or a personal engagement, our app simplifies your planning process with intuitive features and a user-friendly interface. Enjoy the flexibility of customizing your schedules, receiving timely reminders, and accessing your appointments on the go. With SwiftSlotz, stay on top of your commitments and make the most of your time!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgAppLogo" />

        <TextView
            android:id="@+id/txtDevelopersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/txtAppDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Developer 1 Name -->
        <TextView
            android:id="@+id/txtDeveloper1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pantho Haque"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtDevelopersTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Developer 2 Name -->
        <TextView
            android:id="@+id/txtDeveloper2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arnob Bhowmik"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtDeveloper1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Additional Information or Footer -->
        <TextView
            android:id="@+id/txtFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This app is proudly developed by Pantho Haque and Arnob Bhowmik, who are dedicated to providing a top-notch user experience and continuously enhancing the app's features. We value your feedback and suggestions, which are crucial for our ongoing improvements. Stay tuned for exciting updates and new features that will further enrich your experience with SwiftSlotz. Thank you for choosing our app to streamline your appointment management needs."
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/txtDeveloper2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
