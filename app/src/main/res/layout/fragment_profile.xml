<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.bottomBarFragments.ProfileFragment">

    <TextView
        android:id="@+id/user_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="First Name" />

    <TextView
        android:id="@+id/user_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_firstName"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="Last Name" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_lastName"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="Username" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_username"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="Email" />

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="Phone" />

    <TextView
        android:id="@+id/user_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_phone"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="Company" />

    <TextView
        android:id="@+id/user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_occupation"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:text="Address" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Log Out" />
</RelativeLayout>
